<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    xmlns:float="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="1">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12">

        <Button
            android:id="@+id/find_id_back_btn"
            android:layout_width="12dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="start|center"
            android:background="@drawable/ic_orange_left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="아이디 찾기"
            android:fontFamily="@font/nanum_square_round_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="27sp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.73"
        android:weightSum="1"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.4"
            android:weightSum="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:orientation="horizontal">

                    <com.wrapp.floatlabelededittext.FloatLabeledEditText
                        android:id="@+id/floatLabeledEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        float:fletPadding="5dp"
                        tools:ignore="MissingClass,MissingConstraints">

                        <EditText
                            android:id="@+id/email_edittext_find_id"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanum_square_round_regular"
                            android:hint="이메일"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textColorHint="@color/black"
                            android:textSize="15sp"
                            android:theme="@style/editText" />
                    </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="@"
                        android:textSize="20sp"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:textColor="@color/black"
                        />


                    <Spinner
                        android:id="@+id/email_spinner_find_id"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="0.5"
                        android:backgroundTint="@color/point_color"
                        android:dropDownWidth="150dp"
                        android:popupBackground="@color/white"
                        android:background="@drawable/spinner_design"
                        android:textAlignment="center"
                        android:spinnerMode="dropdown"
                        android:layout_gravity="bottom"
                        tools:ignore="RtlCompat"/>  //스피너 팝업 컬러

                    <Button
                        android:id="@+id/email_certification_btn_find_id"
                        android:layout_marginBottom="3dp"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_gravity="bottom"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:text="인증하기"
                        android:enabled="false"
                        android:textColor="@color/thick_gray"
                        android:background="@drawable/stroke_disabled_btn"/>


                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"/>

            </LinearLayout>

             <LinearLayout
                 android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.05"
                    android:layout_height="match_parent"/>

                 <LinearLayout
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_weight="0.9"
                     android:weightSum="1"
                     android:orientation="horizontal">

                     <FrameLayout
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">

                         <com.wrapp.floatlabelededittext.FloatLabeledEditText
                             android:layout_width="match_parent"
                             android:layout_height="match_parent"
                             float:fletPadding="5dp"
                             tools:ignore="MissingClass,MissingConstraints">

                             <EditText
                                 android:id="@+id/certi_num_edittext_find_id"
                                 android:layout_width="match_parent"
                                 android:layout_height="match_parent"
                                 android:singleLine="true"
                                 android:textColor="@color/black"
                                 android:theme="@style/editText"
                                 android:textColorHint="@color/black"
                                 android:textSize="15sp"
                                 android:maxLength="4"
                                 android:fontFamily="@font/nanum_square_round_regular"
                                 android:hint="인증번호" />
                         </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                         <TextView
                             android:layout_marginBottom="11dp"
                             android:layout_gravity="end|bottom"
                             android:id="@+id/timer_text_find_id"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_marginRight="10dp"
                             android:textColor="@color/timer"
                             android:textSize="20sp"/>

                     </FrameLayout>

                     <Button
                         android:id="@+id/certi_num_confirm_btn_find_id"
                         android:layout_marginBottom="3dp"
                         android:layout_width="80dp"
                         android:layout_height="30dp"
                         android:layout_gravity="right|bottom"
                         android:text="확인"
                         android:fontFamily="@font/nanum_square_round_regular"
                         android:background="@drawable/stroke_btn"/>

                 </LinearLayout>


                 <TextView
                     android:layout_width="0dp"
                     android:layout_weight="0.05"
                     android:layout_height="match_parent"/>

             </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.8"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/your_id_textview_find_id"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text=" 회원님의 아이디"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:textColor="@color/black"/>

                    <EditText
                        android:id="@+id/id_edittext_find_id"
                        android:visibility="gone"
                        android:layout_marginTop="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:fontFamily="@font/nanum_square_round_regular"
                        android:backgroundTint="@color/gray"
                        android:focusable="false"/>

                </LinearLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>